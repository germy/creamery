<script>
  $(function(){
    $('#shiftassignmentdatepicker').fdatetimepicker({
        minView: '2',
        format: 'mm/dd/yyyy'
    });
  });
</script>
<div id="new_shift_form">
  <h5>Add New Shift</h5>
  <%= simple_form_for @shift, remote: true do |f| %>
    <%= f.error_notification %>
    <%= f.text_field :date, :label => "Date", :value => Date.current.to_date.strftime("%m/%d/%Y"), :id => "shiftassignmentdatepicker" %>
    <%= f.input :start_time %>
    <%= f.input :end_time, :default => 3.hours.from_now %>
    <%= f.input :notes %>
    <%= f.input :assignment_id, as: :hidden, input_html: { value: params[:assignment_id] } %>

    <div class="form-actions">
      <%= f.submit nil, class: 'button small radius' %>
      <%= link_to 'Cancel', assignment_path(params[:assignment_id]), class: 'button small radius alert' %>
    </div>
  <% end %>
</div>