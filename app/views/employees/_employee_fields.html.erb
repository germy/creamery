<%= f.error_notification %>   
<%= f.input :first_name %>
<%= f.input :last_name %>
<% if can? :update_ssn, Employee %>
  <%= f.input :ssn %>
<% else %>
  SSN: <%= f.object.ssn %>
  <br>
  You do not have sufficient privledges to update your SSN. Please contact an administrator.
<% end %>
<%= f.text_field :date_of_birth, :id => "employeedatepicker", label: 'Birth Date', :value => @employee.date_of_birth.to_date.strftime("%m/%d/%Y") %>
<%= f.input :phone %>
<% if can? :update_role, Employee %>
  <%= f.input :role, as: :select, collection: Employee::ROLES_LIST %>
<% end %>

<%= f.input :active %>




