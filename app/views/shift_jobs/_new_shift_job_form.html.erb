<div id="new_shift_job_form">
  <h5>Add New Job Assignment</h5>
  <%= simple_form_for @shift_job, remote: true do |f| %>
    <%= f.error_notification %>  
    <%= f.label :job_id %>
    <%= f.select :job_id, options_from_collection_for_select(Job.active, :id, :name), include_blank: true, error: "A job must be specified" %>
    <%= f.input :shift_id, as: :hidden, input_html: { value: params[:shift_id] } %>
    <div class="form-actions">
      <%= f.submit nil, class: 'button small radius' %>
      <%= link_to 'Cancel', shift_path(params[:shift_id]), class: 'button small radius alert' %>
    </div>
  <% end %>
</div>